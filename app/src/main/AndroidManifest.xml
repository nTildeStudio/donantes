<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ntilde.donantes" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <!--
      IMPORTANT: Change "com.parse.starter.permission.C2D_MESSAGE" in the lines below
      to match your app's package name + ".permission.C2D_MESSAGE".
    -->
    <!--<permission android:protectionLevel="signature" android:name="com.parse.starter.permission.C2D_MESSAGE" />-->
    <permission android:protectionLevel="signature" android:name="com.ntilde.donantes.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.ntilde.donantes.permission.C2D_MESSAGE" />

    <application
        android:name=".DonantesApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_logotipo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyAEfwvLkIqr2lykuFmKRnv8q-KVEKTl40Y" />

        <activity
            android:name=".SplashScreen"
            android:label="@string/title_activity_splash_screen"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Ubicacion"
            android:label="@string/title_activity_ubicacion"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Agenda"
            android:label="@string/title_activity_agenda"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".MenuPrincipal"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".PrimerInicio"
            android:label="@string/title_activity_primer_inicio"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Configuracion"
            android:label="@string/title_activity_configuracion"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Informacion"
            android:label="@string/title_activity_informacion"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Mensajes"
            android:label="@string/title_activity_mensajes"
            android:screenOrientation="portrait">
        </activity>

        <!--PARSE NOTIFICATIONS -->
        <meta-data android:name="com.parse.push.notification_icon" android:resource="@drawable/ic_logotipo_blanco"/>
        <service android:name="com.parse.PushService" />
        <receiver android:name="com.parse.ParseBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.USER_PRESENT" />
            </intent-filter>
        </receiver>
        <receiver android:name="DonantesReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.parse.push.intent.RECEIVE" />
                <action android:name="com.parse.push.intent.DELETE" />
                <action android:name="com.parse.push.intent.OPEN" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.parse.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <!--
                  IMPORTANT: Change "com.parse.starter" to match your app's package name.
                -->
                <!--<category android:name="com.parse.starter" />-->
                <category android:name="com.ntilde.donantes" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".PuntoDeDonacion"
            android:label="@string/title_activity_punto_de_donacion"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
