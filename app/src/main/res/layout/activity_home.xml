<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity"
    android:background="#fff"
    android:id="@+id/iconos_margen_izquierdo">

    <com.ntilde.percentagelayout.PLinearLayout
        android:id="@+id/home_cabecera"
        android:layout_width="0px"
        android:layout_height="0px"
        app:pl_percentage_height="12.5"
        app:pl_percentage_width="100"
        android:orientation="vertical">
        <com.ntilde.percentagelayout.PLinearLayout
            android:layout_width="0px"
            android:layout_height="0px"
            app:pl_percentage_height="95"
            app:pl_percentage_width="100"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/home_logotipo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_logotipo"
                android:adjustViewBounds="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.ntilde.percentagelayout.PTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:ptv_height="1"
                    android:text=" "
                    android:textColor="#444"/>
                <com.ntilde.percentagelayout.PTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:ptv_height="5"
                    android:text="Donación de sangre"
                    android:textColor="#c00"/>
                <com.ntilde.percentagelayout.PTextView
                    android:id="@+id/menu_principal_nombre_centro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:ptv_height="2.2"
                    android:text="Centro Regional de Transfusiones de Galicia"
                    android:textColor="#444"/>
            </LinearLayout>
        </com.ntilde.percentagelayout.PLinearLayout>
        <com.ntilde.percentagelayout.PLinearLayout
            android:id="@+id/home_borde_rojo_superior"
            android:layout_width="0px"
            android:layout_height="0px"
            app:pl_percentage_height="5"
            app:pl_percentage_width="100"
            android:background="#c00">
        </com.ntilde.percentagelayout.PLinearLayout>
    </com.ntilde.percentagelayout.PLinearLayout>

    <com.ntilde.percentagelayout.PLinearLayout android:layout_width="0px" android:layout_height="0px"
        android:id="@+id/iconos_margen_superior" app:pl_percentage_height="2.5"></com.ntilde.percentagelayout.PLinearLayout>

    <com.ntilde.percentagelayout.PLinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        app:pl_percentage_width="100"
        app:pl_percentage_height="14"
        android:orientation="horizontal">

        <com.ntilde.percentagelayout.PImageView
            android:id="@+id/icono_ubicacion"
            android:tag="ubicacion"
            android:layout_width="1px"
            android:layout_height="1px"
            app:piv_height="13"
            android:alpha="0"
            android:src="@drawable/ic_ubicacion"/>

        <com.ntilde.percentagelayout.PLinearLayout
            android:id="@+id/info_ubicacion"
            android:tag="ubicacion"
            android:layout_width="0px"
            android:layout_height="0px"
            app:pl_percentage_width="80"
            app:pl_percentage_height="100"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <com.ntilde.percentagelayout.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_donde_donar_titulo"
                app:ptv_height="4"
                android:textColor="#222"/>
            <com.ntilde.percentagelayout.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_donde_donar_descripcion"
                app:ptv_height="2"
                android:textColor="#444"/>
            <com.ntilde.percentagelayout.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                app:ptv_height="1"/>
        </com.ntilde.percentagelayout.PLinearLayout>

    </com.ntilde.percentagelayout.PLinearLayout>

    <com.ntilde.percentagelayout.PLinearLayout android:layout_width="0px" android:layout_height="0px"
        app:pl_percentage_height="2.5"></com.ntilde.percentagelayout.PLinearLayout>

    <com.ntilde.percentagelayout.PLinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        app:pl_percentage_width="100"
        app:pl_percentage_height="14"
        android:orientation="horizontal">

        <com.ntilde.percentagelayout.PImageView
            android:id="@+id/icono_agenda"
            android:tag="agenda"
            android:layout_width="1px"
            android:layout_height="1px"
            app:piv_height="13"
            android:alpha="0"
            android:src="@drawable/ic_agenda"/>

        <com.ntilde.percentagelayout.PLinearLayout
            android:id="@+id/info_agenda"
            android:tag="agenda"
            android:layout_width="0px"
            android:layout_height="0px"
            app:pl_percentage_width="80"
            app:pl_percentage_height="100"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <com.ntilde.percentagelayout.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_agenda_titulo"
                app:ptv_height="4"
                android:textColor="#222"/>
            <com.ntilde.percentagelayout.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_agenda_descripcion"
                app:ptv_height="2"
                android:textColor="#444"/>
            <com.ntilde.percentagelayout.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                app:ptv_height="1"/>
        </com.ntilde.percentagelayout.PLinearLayout>

    </com.ntilde.percentagelayout.PLinearLayout>

    <com.ntilde.percentagelayout.PLinearLayout android:layout_width="0px" android:layout_height="0px"
        app:pl_percentage_height="2.5"></com.ntilde.percentagelayout.PLinearLayout>

    <com.ntilde.percentagelayout.PLinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        app:pl_percentage_width="100"
        app:pl_percentage_height="14"
        android:orientation="horizontal">

        <com.ntilde.percentagelayout.PImageView
            android:id="@+id/icono_informacion"
            android:tag="informacion"
            android:layout_width="1px"
            android:layout_height="1px"
            app:piv_height="13"
            android:alpha="0"
            android:src="@drawable/ic_informacion"/>

        <com.ntilde.percentagelayout.PLinearLayout
            android:id="@+id/info_informacion"
            android:tag="informacion"
            android:layout_width="0px"
            android:layout_height="0px"
            app:pl_percentage_width="80"
            app:pl_percentage_height="100"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <com.ntilde.percentagelayout.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Información al donante"
                app:ptv_height="4"
                android:textColor="#222"/>
            <com.ntilde.percentagelayout.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Todo lo que necesitas saber sobre donaciones"
                app:ptv_height="2"
                android:textColor="#444"/>
            <com.ntilde.percentagelayout.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                app:ptv_height="1"/>
        </com.ntilde.percentagelayout.PLinearLayout>

    </com.ntilde.percentagelayout.PLinearLayout>

    <com.ntilde.percentagelayout.PLinearLayout android:layout_width="0px" android:layout_height="0px"
        app:pl_percentage_height="2.5"></com.ntilde.percentagelayout.PLinearLayout>

    <com.ntilde.percentagelayout.PLinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        app:pl_percentage_width="100"
        app:pl_percentage_height="14"
        android:orientation="horizontal">

        <com.ntilde.percentagelayout.PImageView
            android:id="@+id/icono_mensajes"
            android:tag="mensajes"
            android:layout_width="1px"
            android:layout_height="1px"
            app:piv_height="13"
            android:alpha="0"
            android:src="@drawable/ic_mensajes"/>

        <com.ntilde.percentagelayout.PLinearLayout
            android:id="@+id/info_mensajes"
            android:tag="mensajes"
            android:layout_width="0px"
            android:layout_height="0px"
            app:pl_percentage_width="80"
            app:pl_percentage_height="100"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <com.ntilde.percentagelayout.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mensajes del CRTG"
                app:ptv_height="4"
                android:textColor="#222"/>
            <com.ntilde.percentagelayout.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vuelve a leer los mensajes y alertas del CRTG"
                app:ptv_height="2"
                android:textColor="#444"/>
            <com.ntilde.percentagelayout.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                app:ptv_height="1"/>
        </com.ntilde.percentagelayout.PLinearLayout>

    </com.ntilde.percentagelayout.PLinearLayout>

    <com.ntilde.percentagelayout.PLinearLayout android:layout_width="0px" android:layout_height="0px"
        app:pl_percentage_height="2.5"></com.ntilde.percentagelayout.PLinearLayout>

    <com.ntilde.percentagelayout.PLinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        app:pl_percentage_width="100"
        app:pl_percentage_height="14"
        android:orientation="horizontal">

        <com.ntilde.percentagelayout.PImageView
            android:id="@+id/icono_configuracion"
            android:tag="configuracion"
            android:layout_width="1px"
            android:layout_height="1px"
            app:piv_height="13"
            android:alpha="0"
            android:src="@drawable/ic_configuracion"/>

        <com.ntilde.percentagelayout.PLinearLayout
            android:id="@+id/info_configuracion"
            android:tag="configuracion"
            android:layout_width="0px"
            android:layout_height="0px"
            app:pl_percentage_width="80"
            app:pl_percentage_height="100"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <com.ntilde.percentagelayout.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configuración"
                app:ptv_height="4"
                android:textColor="#222"/>
            <com.ntilde.percentagelayout.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gestiona tu perfil de usuario y alertas"
                app:ptv_height="2"
                android:textColor="#444"/>
            <com.ntilde.percentagelayout.PTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                app:ptv_height="1"/>
        </com.ntilde.percentagelayout.PLinearLayout>

    </com.ntilde.percentagelayout.PLinearLayout>

    <com.ntilde.percentagelayout.PLinearLayout android:layout_width="0px" android:layout_height="0px"
        app:pl_percentage_height="2.5"></com.ntilde.percentagelayout.PLinearLayout>

    <LinearLayout
        android:id="@+id/home_borde_rojo_inferior"
        android:layout_width="match_parent" android:layout_height="0px"
        android:background="#c00" android:orientation="horizontal">
    </LinearLayout>
</LinearLayout>
