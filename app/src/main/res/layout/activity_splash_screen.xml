<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#fff"
    tools:context=".activities.SplashScreen">

    <com.ntilde.app.views.percentagelayout.PLinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        app:pl_percentage_height="35"
        app:pl_percentage_width="100"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.github.jorgecastillo.FillableLoader
                android:layout_gravity="center"
                android:id="@+id/loaderGris"
                android:layout_width="176px"
                android:layout_height="238px"
                app:originalWidth="176"
                app:originalHeight="238"
                app:strokeColor="#0000"
                app:fillColor="#999999"
                app:strokeWidth="0dp"
                app:strokeDrawingDuration="0"
                app:fillDuration="0"
                app:clippingTransform="waves"/>

            <com.github.jorgecastillo.FillableLoader
                android:layout_gravity="center"
                android:id="@+id/fillableLoader"
                android:layout_width="176px"
                android:layout_height="238px"
                app:originalWidth="176"
                app:originalHeight="238"
                app:strokeColor="#000"
                app:fillColor="#000"
                app:strokeWidth="1dp"
                app:strokeDrawingDuration="3000"
                app:fillDuration="1000"
                app:clippingTransform="waves"/>

            <com.github.jorgecastillo.FillableLoader
                android:layout_gravity="center"
                android:id="@+id/loaderRed"
                android:layout_width="176px"
                android:layout_height="238px"
                app:originalWidth="176"
                app:originalHeight="238"
                app:strokeColor="#0000"
                app:fillColor="#c00"
                app:strokeWidth="0dp"
                app:strokeDrawingDuration="0"
                app:fillDuration="3000"
                app:clippingTransform="waves"/>

        </FrameLayout>

    </com.ntilde.app.views.percentagelayout.PLinearLayout>

</RelativeLayout>
